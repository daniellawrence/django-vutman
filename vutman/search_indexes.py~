from haystack import indexes
from vutman.models import EmailAlias


class EmailAliasIndex(indexes.SearchIndex, indexes.Indexable):
    text = indexes.CharField(document=True, use_template=True)
    author = indexes.CharField(model_attr='last_modified_by')
    pub_date = indexes.DateTimeField(model_attr='last_modified')

    def get_model(self):
        return EmailAlias

    # def index_queryset(self, using=None):
    #    """Used when the entire index for model is updated."""
    #    return self.get_model().objects.filter(
    # pub_date__lte=datetime.datetime.now())
